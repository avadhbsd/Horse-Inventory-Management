<div class="kt-content kt-grid__item kt-grid__item--fluid" id="kt_content">
  <div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head">
      <div class="kt-portlet__head-label">
        <h3 class="kt-portlet__head-title">
          All Products 
        </h3>
      </div>
    </div>
    <div class="kt-portlet__body">
      <form class="kt-form kt-form--fit kt-margin-b-20">
        <div class="row kt-margin-b-20">
          <div class="col-lg-3 kt-margin-b-10-tablet-and-mobile">
            <label>Product Title:</label>
            <input type="text" class="form-control kt-input" placeholder="Title - E.g: Bear Phone Case" data-col-index="0">
          </div>
          <div class="col-lg-2 kt-margin-b-10-tablet-and-mobile">
            <label>Variants Count:</label>
            <select class="form-control kt-input" id="count_query_type">
              <option value="">Any</option>
              <option value="eq">Equal</option>
              <option value="lt">Less Than</option>
              <option value="gt">Greater Than</option>
            </select>
          </div>
          <div class="col-lg-2 kt-margin-b-10-tablet-and-mobile">
            <label>&nbsp;</label>
            <input type="number" class="form-control" id="count_query_number" placeholder="Number - E.g: 7">
            <input type="hidden" class="kt-input" id="query_string" data-col-index="1">
          </div>
        </div>
        <div class="row kt-margin-b-20">
          <div class="col-lg-3 kt-margin-b-10-tablet-and-mobile">
            <label>Type:</label>
            <select class="form-control kt-input" id="type_select" data-col-index="2">
              <option value="">Any</option>
              <% SharedProduct.order('product_type').pluck(:product_type).uniq.each do |product_type| %>
                <option value="<%= product_type %>"><%= product_type %></option>
              <% end %>
            </select>
          </div>
          <div class="col-lg-4 kt-margin-b-10-tablet-and-mobile">
            <label>Vendor:</label>
            <select class="form-control kt-input" id="vendor_select"  data-col-index="3">
              <option value="">Any</option>
              <% SharedProduct.order('vendor').pluck(:vendor).uniq.each do |vendor| %>
                <option value="<%= vendor %>"><%= vendor %></option>
              <% end %>
            </select>
          </div>
        </div>
        <div class="kt-separator kt-separator--md kt-separator--dashed"></div>
        <div class="row">
          <div class="col-lg-12">
            <button class="btn btn-brand kt-btn kt-btn--icon" id="m_search">
              <span> <i class="la la-search"></i> <span>Search</span> </span>
            </button>
            &nbsp;&nbsp; 
            <button class="btn btn-secondary kt-btn kt-btn--icon" id="m_reset">
              <span> <i class="la la-close"></i> <span>Reset</span> </span>
            </button>
          </div>
        </div>
        <div class="kt-separator kt-separator--md kt-separator--dashed"></div>
      </form>
      <table class="table table-striped- table-bordered table-hover" id="products_datatable" data-source="<%= data_admin_products_path %>">
        <thead>
          <tr>
            <th>Product</th>
            <th>Variants</th>
            <th>Type</th>
            <th>Vendor</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>
