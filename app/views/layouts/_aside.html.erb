<button class="kt-aside-close " id="kt_aside_close_btn"><i class="la la-close"></i></button>
<div class="kt-aside kt-aside--fixed kt-grid__item kt-grid kt-grid--desktop kt-grid--hor-desktop" id="kt_aside">
  <div class="kt-aside__brand kt-grid__item " id="kt_aside_brand">
    <div class="kt-aside__brand-logo">
      <%= link_to(image_tag('brand/logo.png', size: '95x43'), admin_dashboard_path )%>
    </div>
    <div class="kt-aside__brand-tools">
      <button class="kt-aside__brand-aside-toggler kt-aside__brand-aside-toggler--left" id="kt_aside_toggler"><span></span></button>
    </div>
  </div>
  <div class="kt-aside-menu-wrapper kt-grid__item kt-grid__item--fluid" id="kt_aside_menu_wrapper">
    <div id="kt_aside_menu" class="kt-aside-menu " data-ktmenu-vertical="1" data-ktmenu-scroll="1" data-ktmenu-dropdown-timeout="500" >
      <ul class="kt-menu__nav ">
        <li class="kt-menu__item <%= active_class(:dashboard) %>" aria-haspopup="true" data-ktmenu-submenu-toggle="hover">
          <a href="<%= admin_dashboard_path %>" class="kt-menu__link"><i class="kt-menu__link-icon flaticon2-file"></i><span class="kt-menu__link-text">Main Dashboard</span></a>
        </li>
        <li class="kt-menu__item <%= active_class(:orders) %>" aria-haspopup="true" data-ktmenu-submenu-toggle="hover">
          <a href="<%= admin_orders_path %>" class="kt-menu__link"><i class="kt-menu__link-icon flaticon-layer"></i><span class="kt-menu__link-text">Orders</span></a>
        </li>
        <li class="kt-menu__item <%= active_class(:products) %>" aria-haspopup="true" >
          <a href="<%= admin_products_path %>" class="kt-menu__link "><i class="kt-menu__link-icon flaticon2-box-1"></i><span class="kt-menu__link-text">Products</span></a>
        </li>
      </ul>
    </div>
  </div>
  <div class="kt-aside__footer kt-grid__item" id="kt_aside_footer">
    <div class="kt-aside__footer-nav">
    </div>
  </div>
</div>